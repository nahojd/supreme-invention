<div class="widget-wrap">
    <h3 class="widget-title">Info</h3>
    <div class="widget">
        <p><%= config.author_info %></p>

        <div class="icons">
            <% if (config.contact.twitter){ %>
                <a href="https://twitter.com/<%= config.contact.twitter %>"><img src="/css/images/twitter.svg"></a>
            <% } %>
            <% if (config.contact.github){ %>
                <a href="https://github.com/<%= config.contact.github %>"><img src="/css/images/github.svg"></a>
            <% } %>
            <% if (config.contact.linkedin){ %>
                <a href="https://www.linkedin.com/in/<%= config.contact.linkedin %>"><img src="/css/images/linkedin.svg"></a>
            <% } %>
            <% if (config.contact.facebook){ %>
                <a href="https://facebook.com/<%= config.contact.facebook %>"><img src="/css/images/facebook.svg"></a>
            <% } %>
            <% if (config.contact.stackoverflow){ %>
                <a href="https://stackoverflow.com/users/<%= config.contact.stackoverflow %>"><img src="/css/images/overflowing.svg"></a>
            <% } %>
        </div>
    </div>
</div>