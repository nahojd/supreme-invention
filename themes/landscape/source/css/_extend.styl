$block-caption
  text-decoration: none
  text-transform: uppercase
  letter-spacing: 2px
  color: color-grey
  margin-bottom: 1em
  margin-left: 5px
  line-height: 1em
  text-shadow: 0 1px #fffaf3
  font-weight: bold
  @media (prefers-color-scheme: dark)
    text-shadow: 0 1px #111

$block
  background: #fffaf3
  box-shadow: 1px 2px 3px #c3beb5
  border: none
  border-radius: 0
  @media (prefers-color-scheme: dark)
    background: color-dark-grey
    box-shadow: 1px 2px 3px #222

$base-style
  h1
    font-family: font-sans
    font-weight: 300
    font-size: 2em
  h2
    font-family: font-sans
    font-weight: 300
    font-size: 1.5em
  h3
    font-family: font-sans
    font-weight: 300
    font-size: 1.3em
  h4
    font-size: 1.2em
  h5
    font-size: 1em
  h6
    font-size: 1em
    color: color-grey
  hr
    border: 1px dashed color-border
  strong
    font-weight: bold
  em, cite
    font-style: italic
  sup, sub
    font-size: 0.75em
    line-height: 0
    position: relative
    vertical-align: baseline
  sup
    top: -0.5em
  sub
    bottom: -0.2em
  small
    font-size: 0.85em
  acronym, abbr
    border-bottom: 1px dotted
  ul, ol, dl
    margin: 0 20px
    line-height: line-height
  ul, ol
    ul, ol
      margin-top: 0
      margin-bottom: 0
  ul
    list-style: disc
  ol
    list-style: decimal
  dt
    font-weight: bold